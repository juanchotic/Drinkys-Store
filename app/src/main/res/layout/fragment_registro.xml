<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="left"
    android:background="@android:color/transparent"
    tools:context=".view.iu.fragments.RegistroFragment">

    <ImageButton
        android:id="@+id/btnBackHomeRegiste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_product"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Register"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_layout_input"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="40dp"
                android:paddingBottom="30dp"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/inputNombreR"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_edit_text"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName|text"
                    android:textColorHint="#AFABAB"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/inputApellidoR"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_edit_text"
                    android:ems="10"
                    android:hint="Apellidos"
                    android:inputType="textPersonName|text"
                    android:textColorHint="#AFABAB"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/inputTelefonoR"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_edit_text"
                    android:ems="10"
                    android:hint="Tel: "
                    android:inputType="phone"
                    android:textColorHint="#AFABAB"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/inputUserR"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_edit_text"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textPersonName|text|textEmailAddress"
                    android:textColorHint="#AFABAB"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/inputPasswordR"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_edit_text"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="#AFABAB"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/inputRepetirPasswordR"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_edit_text"
                    android:ems="10"
                    android:hint="Repeat password"
                    android:inputType="textPassword"
                    android:textColorHint="#AFABAB"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >



                <Button
                    android:id="@+id/btnSignUpR"
                    android:layout_width="100dp"
                    android:layout_height="33dp"
                    android:background="@drawable/borde_button_su"
                    android:textColor="@color/black"
                    android:text="SIGN UP"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>



            <TextView
                android:id="@+id/textView"
                android:layout_width="91dp"
                android:layout_height="18dp"
                android:layout_marginBottom="10dp"
                android:text="or sign up"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/btnTelefono"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnOlvidePass"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/btnTelefonoR"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_phone"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:background="@drawable/borde_button_other"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="already have an account?"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/btnSignInR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="log in"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>